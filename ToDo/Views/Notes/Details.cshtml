@using ToDo.Services;
@model ToDo.Models.Note
@inject CommonLocalizationService localizer
@{
    ViewData["Title"] = "Details";
}


<div style="display: flex; justify-content: center; align-items: center; height:50vh">
    <div class="card text-center border border-primary shadow-0 mb-3" style="max-width: 28rem; padding-top: 10px">
        <div class="card-header"><strong>@Html.DisplayFor(model => model.Title)</strong></div>
        <div class="card-body" style="text-align: left;">
            <ul style="list-style-type: none; padding: 0;">
                <li><strong>@localizer.Get("Content"):</strong> @Html.DisplayFor(model => model.Content)</li>
                <li><strong>@localizer.Get("Category"):</strong> @Html.DisplayFor(model => model.Category)</li>
                <li><strong>@localizer.Get("Date"):</strong> @Model.Date.ToString("dd/MM/yyyy HH:mm:ss")</li>
                <li>
                    <strong>@localizer.Get("Priority"):</strong> @switch (Model.Priority)
                    {
                        case PriorityLevel.Low:
                            <span class="badge rounded-pill badge-success">Low</span>
                            break;
                        case PriorityLevel.Medium:
                            <span class="badge rounded-pill badge-warning">Medium</span>
                            break;
                        case PriorityLevel.High:
                            <span class="badge rounded-pill badge-danger">High</span>
                            break;
                    }
                </li>
                <li>
                    <strong>@localizer.Get("Completed"):</strong> @switch (Model.Completed)
                    {
                        case false:
                            <span class="badge rounded-pill badge-danger">@localizer.Get("No")</span>
                            break;
                        case true:
                            <span class="badge rounded-pill badge-success">@localizer.Get("Yes")</span>
                            break;
                    }
                </li>
            </ul>
        </div>
    </div>
</div>

<div style="text-align: center;">
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">@localizer.Get("Back")</a>
</div>

